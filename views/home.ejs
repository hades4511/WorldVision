<%- include('includes/header.ejs') %>
        </header>
        <div class="container">
          <div class="banner-top-thumb-wrap">
            <div class="d-lg-flex justify-content-between align-items-center">
              <% for(entry of top){ %>
                <div class="d-flex justify-content-between  mb-3 mb-lg-0">
                  <div>
                    <img
                      src="<%= entry.imageurl %>"
                      alt="thumb "
                      class="banner-top-thumb"
                    />
                  </div>
				          <a href="/article?id=<%= entry._id %>" class="article-link">
                    <h5 class="m-0 font-weight-bold">
                      <% const output = entry.name.split(" "); %>
                      <% for(let i=0; i<5; i++){ %>
                        <%= output[i] + ' ' %>
                      <% } %>
                    </h5>
				          </a>
                </div>
              <% } %>
          </div>
          </div>
          <div class="row">
            <div class="col-lg-8">
              <div class="owl-carousel owl-theme" id="main-banner-carousel">
                <div class="item">
                  <div class="carousel-content-wrapper mb-2">
                    <div class="carousel-content">
                      <a href="/article?id=<%=carousel._id%>" class="article-link-carousel">
                        <h1 class="font-weight-bold">
                          <%= carousel.name %>
                        </h1>
                      </a>
                      <p class="text-color m-0 pt-2 d-flex align-items-center">
                        <span class="fs-10 mr-1"><%= carousel.date.toLocaleString() %></span>
                      </p>
                    </div>
                    <div class="carousel-image">
                      <img src="<%= carousel.imageurl %>" alt="" />
                    </div>
                  </div>
                </div>
              </div>
            </div>
            <div class="col-lg-4">
              <% let rowcheck = false; %>
              <% for(i in side){ %>
                <% if(i % 2 == 0){ %>
                  <div class="row">
                  <% rowcheck = true; %>
                <% } %>
                <div class="col-sm-6">
                  <div class="py-3 border-bottom">
                    <div class="d-flex align-items-center pb-2">
                      <img
                        src="<%= side[i].imageurl %>"
                        class="img-xs img-rounded mr-2"
                        alt="thumb"
                      />
                      <span class="fs-12 text-muted"><%= side[i].authorfname %></span>
                    </div>
					          <a href="/article?id=<%=side[i]._id%>" class="article-link">
                      <p class="fs-14 m-0 font-weight-medium line-height-sm">
                        <%= side[i].name %>
                      </p>
					          </a>
                  </div>
                </div>
                <% if(i % 2 == 1){ %>
                  </div>
                  <% rowcheck = false; %>
                <% } %>
              <% } %>
              <% if(rowcheck){ %>
                </div>
                <% rowcheck = false; %>
              <% } %>
            </div>
          </div>
          <div class="world-news">
            <div class="row">
              <div class="col-sm-12">
                <div class="d-flex position-relative  float-left">
                  <h3 class="section-title">Political News</h3>
                </div>
              </div>
            </div>
            <div class="row">
              <% for(item of politics){ %>
                <div class="col-lg-3 col-sm-6 grid-margin mb-5 mb-sm-2">
                  <div class="position-relative image-hover">
                    <img
                      src="<%= item.imageurl %>"
                      class="img-fluid"
                      alt="world-news"
                    />
                    <span class="thumb-title">POLITICS</span>
                  </div>
                  <h5 class="font-weight-bold mt-3">
                    <%= item.name %>
                  </h5>
                  <p class="fs-15 font-weight-normal">
                    <%= item.heading %>
                  </p>
                  <a href="/article?id=<%=item._id%>" class="font-weight-bold text-dark pt-2">
                    Read Article
                  </a>
                </div>
              <% } %>
          </div>
          <div class="editors-news">
            <div class="row">
              <div class="col-lg-3">
                <div class="d-flex position-relative float-left">
                  <h3 class="section-title">Popular News</h3>
                </div>
              </div>
            </div>
            <div class="row">
              <div class="col-lg-6  mb-5 mb-sm-2">
                <div class="position-relative image-hover">
                  <img
                    src="<%= popular[0].imageurl %>"
                    class="img-fluid"
                    alt="world-news"
                  />
                  <span class="thumb-title"><%= popular[0].type.toUpperCase() %></span>
                </div>
				        <a href="/article?id=<%=popular[0]._id%>" class="article-link">
                  <h1 class="font-weight-600 mt-3">
                    <%= popular[0].name %>
                  </h1></a>
                <p class="fs-15 font-weight-normal">
                  <%= popular[0].heading %>
                </p>
              </div>
              <div class="col-lg-6  mb-5 mb-sm-2">
                <% for(let i = 1; i < popular.length; i++) { %>
                  <% if(i % 2 == 1){ %>
                    <div class="row">
                      <% rowcheck = true; %>
                  <% } %>
                  <div class="col-sm-6  mb-5 mb-sm-2">
                    <div class="position-relative image-hover">
                      <img
                        src="<%= popular[i].imageurl %>"
                        class="img-fluid"
                        alt="world-news"
                      />
                      <span class="thumb-title"><%= popular[i].type.toUpperCase() %></span>
                    </div>
					          <a href="#" class="article-link">
                      <h5 class="font-weight-600 mt-3">
                        <%= popular[i].name %>
                      </h5>
                    </a>
                  </div>
                  <% if(i % 2 == 0){ %>
                    </div>
                    <% rowcheck = false; %>
                  <% } %>
                <% } %>
                <% if(rowcheck){ %>
                  </div>
                  <% rowcheck = false; %>
                <% } %>
              </div>
            </div>
          </div>
          <div class="popular-news">
            <div class="row">
              <div class="col-lg-3">
                <div class="d-flex position-relative float-left">
                  <h3 class="section-title">World News</h3>
                </div>
              </div>
            </div>
            <div class="row">
              <div class="col-lg-9">
                <% for(i in world){ %>
                  <% if(i % 3 == 0){ %>
                    <div class="row">
                    <% rowcheck = true; %>
                  <% } %>
                  <div class="col-sm-4  mb-5 mb-sm-2">
                    <div class="position-relative image-hover">
                      <img
                        src="<%= world[i].imageurl %>"
                        class="img-fluid"
                        alt="world-news"
                      />
                      <span class="thumb-title">WORLD</span>
                    </div>
                    <a href="/article?id=<%=world[i]._id%>" class="article-link">
                      <h5 class="font-weight-600 mt-3">
                        <%= world[i].name %>
                      </h5>
                    </a>
                  </div>
                  <% if(i % 3 == 2){ %>
                    </div>
                    <% rowcheck = false; %>
                  <% } %>
                <% } %>
                <% if(rowcheck){ %>
                  </div>
                  <% rowcheck = false; %>
                <% } %>
              </div>
              <div class="col-lg-3">
                <div class="row">
                  <div class="col-sm-12">
                    <div class="d-flex position-relative float-left">
                      <h3 class="section-title">Latest News</h3>
                    </div>
                  </div>
                  <% for(item of latest) { %>
                    <div class="col-sm-12">
                      <div class="border-bottom pb-3">
					              <a href="/article?id=<%=item._id%>" class="article-link">
                          <h5 class="font-weight-600 mt-0 mb-0">
                            <%= item.name %>
                          </h5>
                        </a>
                        <p class="text-color m-0 d-flex align-items-center">
                        <span class="fs-10 mr-1"><%= item.date.toLocaleString() %></span>
                        </p>
                      </div>
                    </div>
                  <% } %>
                </div>
              </div>
            </div>
          </div>
        </div>>
        <%- include('includes/footer.ejs') %>
      </div>
    </div>
    <script src="../assets/vendors/js/vendor.bundle.base.js"></script>
    <script src="../assets/vendors/aos/dist/aos.js/aos.js"></script>
    <script src="../assets/vendors/owl.carousel/dist/owl.carousel.min.js"></script>
    <script src="../assets/js/demo.js"></script>
  </body>
</html>
