<%- include('includes/header.ejs') %>
        </header>
        <div class="container">
          <div class="banner-top-thumb-wrap">
            <div class="d-lg-flex justify-content-between align-items-center">
              <% for(entry of top){ %>
                <div class="d-flex justify-content-between  mb-3 mb-lg-0">
                  <div>
                    <img
                      src="<%= entry.imageurl %>"
                      alt="thumb "
                      class="banner-top-thumb"
                    />
                  </div>
				          <a href="/article?id=<%= entry._id %>" class="article-link">
                    <h5 class="m-0 font-weight-bold">
                      <% const output = entry.name.split(" "); %>
                      <% for(let i=0; i<5; i++){ %>
                        <%= output[i] + ' ' %>
                      <% } %>
                    </h5>
				          </a>
                </div>
              <% } %>
            </div>
          </div>
		  <div class="row">
			<div class="col-lg-8">
				<h3 class="m-0 font-weight-bold">
          <%= article.name %>
				</h3>
			</div>
		  </div>
		  <div class="row">
			<div class="col-lg-12">
				<span class="fs-11 mr-1"></span>
			</div>
		  </div>
          <div class="row">
            <div class="col-lg-8">
				<div class="owl-carousel owl-theme" id="main-banner-carousel">
					<div class="carousel-image">
						<img src="<%= article.imageurl %>" alt="" />
					</div>
				</div>
				<div class="row">
					<div class="col-lg-12">
						<span class="fs-11 mr-1"></span>
					</div>
				</div>
				<div class="row">
					<div class="col-lg-8">
						<h5 class="m-0 font-weight-bold">
						<%= article.heading %>
						</h5>
					</div>
				</div>
				<div class="row">
					<div class="col-lg-8">
						<span class="fs-10 mr-1"><%= article.authorfname + " | " + article.date.toLocaleString() %></span>
					</div>
				</div>
				<div class="row">
					<div class="col-lg-12">
						<span class="fs-11 mr-1"></span>
					</div>
				</div>
		  <div class="row">
			<div class="col-lg-12">
        <% for(para of article.content){ %>
				  <p class="fs-15 font-weight-normal">
            <%= para %>
          </p>
        <% } %>
			</div>
		  </div>
			</div>
			<div class="col-lg-1">
              <!--image-->
            </div>
            <div class="col-lg-3">
              <div class="row">
                  <div class="col-sm-12">
                    <div class="d-flex position-relative float-left">
                      <h3 class="section-title">What's Hot</h3>
                    </div>
                  </div>
                  <% for(item of popular) { %>
                    <div class="col-sm-12">
                      <div class="border-bottom pb-3">
					              <a href="/article?id=<%=item._id%>" class="article-link">
                          <h5 class="font-weight-600 mt-0 mb-0">
                            <%= item.name %>
                          </h5>
                        </a>
                        <p class="text-color m-0 d-flex align-items-center">
                        <span class="fs-10 mr-1"><%= item.date.toLocaleString() %></span>
                        <!-- <i class="mdi mdi-bookmark-outline mr-3"></i>
                        <span class="fs-10 mr-1">126</span>
                        <i class="mdi mdi-comment-outline"></i> -->
                        </p>
                      </div>
                    </div>
                  <% } %>
                </div>
				<div class="row">
					<div class="col-lg-12">
						<span class="fs-11 mr-1"></span>
					</div>
				</div>
				<div class="row">
					<div class="col-sm-12">
						<div class="d-flex position-relative float-left">
							<h3 class="section-title">More News</h3>
						</div>
					</div>
				</div>
				<div class="row">
					<div class="col-sm-12">
						<div class="position-relative image-hover">
							<img
								src="<%= single.imageurl %>"
								class="img-fluid"
								alt="world-news"
							/>
                  <span class="thumb-title"><%= single.type.toUpperCase() %></span>
                </div>
                <h5 class="font-weight-bold mt-3">
                  <%= single.name %>
                </h5>
                <p class="fs-15 font-weight-normal">
                  <%= single.heading %>
                </p>
                <a href="/article?id=<%= single._id %>" class="font-weight-bold text-dark pt-2"
                  >Read Article</a
                >
              </div>
			  </div>
				
            </div>
          </div>
		  
		  
          <div class="world-news">
            <div class="row">
              <div class="col-sm-12">
                <div class="d-flex position-relative  float-left">
                  <h3 class="section-title">Political News</h3>
                </div>
              </div>
            </div>
            <div class="row">
              <% for(item of politics){ %>
                <div class="col-lg-3 col-sm-6 grid-margin mb-5 mb-sm-2">
                  <div class="position-relative image-hover">
                    <img
                      src="<%= item.imageurl %>"
                      class="img-fluid"
                      alt="world-news"
                    />
                    <span class="thumb-title">POLITICS</span>
                  </div>
                  <h5 class="font-weight-bold mt-3">
                    <%= item.name %>
                  </h5>
                  <p class="fs-15 font-weight-normal">
                    <%= item.heading %>
                  </p>
                  <a href="/article?id=<%=item._id%>" class="font-weight-bold text-dark pt-2">
                    Read Article
                  </a>
                </div>
              <% } %>
            </div>
          </div>

          <%- include('includes/footer.ejs') %>

        <!-- partial -->
      </div>
    </div>
    <!-- inject:js -->
    <script src="assets/vendors/js/vendor.bundle.base.js"></script>
    <!-- endinject -->
    <!-- plugin js for this page -->
    <script src="./assets/vendors/owl.carousel/dist/owl.carousel.min.js"></script>
    <!-- End plugin js for this page -->
    <!-- Custom js for this page-->
    <script src="./assets/js/demo.js"></script>
    <!-- End custom js for this page-->
  </body>
</html>
